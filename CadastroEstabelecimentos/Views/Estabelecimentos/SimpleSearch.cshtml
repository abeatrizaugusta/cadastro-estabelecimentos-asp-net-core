@model IEnumerable<CadastroEstabelecimentos.Models.Estabelecimento>

@{
    ViewData["Title"] = "Simple Search";
}
    <div class="card">
        <div class="card-header">
            <h5>Buscar por data de cadastro</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form class="form-horizontal" asp-action="SimpleSearch">
                        <fieldset>
                            <div class="form-group">
                                <label for="minDate">Data Inicial</label>
                                <div class="col-lg-10">
                                    <input type="date" name="minDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="maxDate">Data Final</label>
                                <div class="col-lg-10">
                                    <input type="date" name="maxDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10 col-lg-offset-2">
                                    <button type="submit" class="btn btn-success">Buscar</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        </div>
<br />
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h5 class="panel-title">Registros Encontrados</h5>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="success">
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataCadastro)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RazaoSocial)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cnpj)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataCadastro)
                                </td>
                                <th>
                                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.Cnpj)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

